{
  "variables": {
    "vm_name": "Cloudspace-rails-14.04"
  },
  "builders": [{
    "type": "virtualbox-ovf",
    "vm_name": "{{user `vm_name`}}",
    "source_path": "virtualbox-ubuntu-14.04/cloudspace-ubuntu-14.04.ovf",
    "output_directory": "virtualbox-rails-4.1",
    "ssh_username": "cloudspace",
    "ssh_password": "cloudspace",
    "ssh_wait_timeout": "20m",
    "shutdown_command": "echo 'cloudspace'|sudo -S shutdown -P now"
  }],
  "provisioners": [{
      "type": "shell",
      "inline": [
        "sleep 10",
        "sudo -S apt-get install ansible -y"
      ]
    },
    {
    "type": "ansible-local",
    "playbook_file": "local.yml"
  }]
}