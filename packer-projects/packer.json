  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "{{user `aws_region`}}",
    "source_ami": "{{user `aws_source_ami`}}",
    "instance_type": "{{user `aws_instance_type`}}",
    "ssh_username": "ubuntu",
    "ami_name": "{{user `vm_name`}}-{{timestamp}}",
    "ami_groups": ["all"],
    "security_group_id": "default",
    "tags": {
      "Name": "packer"
    },
    "user_data": ""
  },{ 
    "type": "virtualbox-ovf",
    "vm_name": "{{user `vm_name`}}",
    "source_path": "../builds/{{user `base_box`}}",
    "output_directory": "../builds/{{user `directory_name`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "20m",
    "shutdown_command": "sudo shutdown -P now"
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "../packer-shell-scripts/sudoers-nopasswd.sh",
      "../packer-shell-scripts/base.sh",
      "../packer-shell-scripts/packer.sh",
      "../packer-shell-scripts/ec2-api-tools.sh"
    ],
    "pause_before": "4s"
  }],
  "post-processors": [{
    "output": "../builds/{{user `directory_name`}}/{{user `vm_name`}}.box",
    "type": "vagrant",
    "keep_input_artifact": true
  }]
