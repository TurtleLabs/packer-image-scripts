{
  "variables": {
    "vm_name": "ruby-latest",
    "directory_name": "ruby",
    "base_box": "ubuntu/ubuntu-latest.ovf"
  },
  "builders": [{
    "type": "virtualbox-ovf",
    "vm_name": "{{user `vm_name`}}",
    "source_path": "../builds/{{user `base_box`}}",
    "output_directory": "../builds/{{user `directory_name`}}",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "20m",
    "shutdown_command": "sudo shutdown -P now"
  }],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "../packer-shell-scripts/node.sh",
      "../packer-shell-scripts/ruby.sh",
      "../packer-shell-scripts/imagemagick.sh",
      "../packer-shell-scripts/memcached.sh",
      "../packer-shell-scripts/nginx.sh"
    ],
    "pause_before": "4s"
  }],
  "post-processors": [{
    "output": "../builds/{{user `directory_name`}}/{{user `vm_name`}}.box",
    "type": "vagrant",
    "keep_input_artifact": true
  }]
}
