{
  "variables": {
    "vm_name": "ruby-latest"
  },
  "builders": [{
    "type": "virtualbox-ovf",
    "vm_name": "{{user `vm_name`}}",
    "source_path": "builds/ubuntu/ubuntu-latest.ovf",
    "output_directory": "builds/ruby",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "20m",
    "shutdown_command": "sudo shutdown -P now"
  }],
  "provisioners": [{
    "type": "shell",
    "script": "scripts/ruby.sh",
    "pause_before": "4s"
  }]
}