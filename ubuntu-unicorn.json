{
  "variables": {
    "vm_name": "unicorn-latest"
  },
  "builders": [{
    "type": "virtualbox-ovf",
    "vm_name": "{{user `vm_name`}}",
    "source_path": "builds/ruby/ruby-latest.ovf",
    "output_directory": "builds/unicorn",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "20m",
    "shutdown_command": "sudo shutdown -P now"
  }],
  "provisioners": [{
      "type": "shell",
      "scripts": [
        "scripts/nginx-unicorn.sh"
      ],
      "pause_before": "4s"
    }]
}
