{
  "variables": {
    "vm_name": "Cloudspace-unicorn"
  },
  "builders": [{
    "type": "virtualbox-ovf",
    "vm_name": "{{user `vm_name`}}",
    "source_path": "virtualbox-rails-4.1/cloudspace-rails-14.04.ovf",
    "output_directory": "virtualbox-unicorn",
    "ssh_username": "cloudspace",
    "ssh_password": "cloudspace",
    "ssh_wait_timeout": "20m",
    "shutdown_command": "echo 'cloudspace'|sudo -S shutdown -P now"
  }],
  "provisioners": [{
      "type": "shell",
      "scripts": [
        "scripts/nginx-unicorn.sh"
      ],
      "pause_before": "10s"
    }]
}